{
  "manifest_version": 3,
  "name": "Twitter Backup Tool",
  "version": "1.0",
  "description": "팔로우 목록과 북마크를 백업합니다.",
  "action": {
    "default_popup": "popup.html"
    
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  }
}